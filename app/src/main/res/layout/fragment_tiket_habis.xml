<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.tiketHabis.TiketHabisFragment">

    <ImageView
        android:id="@+id/imgIllustration"
        android:src="@drawable/illustration_search"
        android:layout_centerInParent="true"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/imgIllustration"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Maaf, Tiket terjual habis!"
            style="@style/TextBody14Medium"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Coba cari perjalanan lainnya!"
            style="@style/TextBody14Medium"
            android:textColor="@color/darkblue_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <Button
        style="@style/ButtonPrimary"
        android:backgroundTint="@color/darkblue_04"
        android:text="Ubah Pencarian"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>