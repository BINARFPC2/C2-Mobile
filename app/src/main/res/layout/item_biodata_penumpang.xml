<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="385dp"
    android:layout_height="650dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rectangle_ungu"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="15dp">

    <TextView
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        style="@style/TextTitle16Medium"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_ungu"
        android:text="Passenger 1 - Adult"
        android:textColor="@color/white"
        />

    <TextView
        style="@style/TextBody14Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:text="Title"
        android:textColor="@color/darkblue_05"
        android:textSize="16dp" />

    <EditText
        android:paddingLeft="15dp"
        android:id="@+id/etTitlePenumpang"
        style="@style/TextTitle16Medium"
        android:hint="Mr."
        android:textColorHint="@color/black"
        android:textSize="18dp"
        android:layout_width="311dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rectangle"/>

    <TextView
        style="@style/TextBody14Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="130dp"
        android:text="Nama Lengkap"
        android:textColor="@color/darkblue_05"
        android:textSize="16dp" />

    <EditText
        android:paddingLeft="15dp"
        android:id="@+id/etNamaLengkapPenumpang"
        style="@style/TextTitle16Medium"
        android:hint="Harry"
        android:textColorHint="@color/black"
        android:textSize="18dp"
        android:layout_width="311dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/rectangle"/>

    <RelativeLayout
        android:layout_width="311dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="210dp">

        <TextView
            android:id="@+id/tvPulangPergi"
            style="@style/TextBody14Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Punya nama keluarga"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchhh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="true"
            app:thumbTint="@color/white"
            app:trackTint="@color/darkblue_05" />

    </RelativeLayout>

    <TextView
        style="@style/TextBody14Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="250dp"
        android:text="Nama Keluarga"
        android:textColor="@color/darkblue_05"
        android:textSize="16dp" />

    <EditText
        android:paddingLeft="15dp"
        android:id="@+id/etNamaKeluargaPenumpang"
        style="@style/TextTitle16Medium"
        android:hint="Potter"
        android:textColorHint="@color/black"
        android:textSize="18dp"
        android:layout_width="311dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/rectangle"/>

    <TextView
        style="@style/TextBody14Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="330dp"
        android:text="Tanggal Lahir"
        android:textColor="@color/darkblue_05"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/etTanggalLahirPenumpang"
        style="@style/TextBody14Regular"
        android:layout_width="311dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/rectangle"
        android:hint="dd/mm/yyyy"
        android:paddingLeft="15dp"
        android:textColorHint="@color/neutral_02"
        android:textSize="16dp" />

    <TextView
        style="@style/TextBody14Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="410dp"
        android:text="Kewarganearaan"
        android:textColor="@color/darkblue_05"
        android:textSize="16dp" />

    <EditText
        android:paddingLeft="15dp"
        android:id="@+id/etKewarganegaraanPenumpang"
        style="@style/TextTitle16Medium"
        android:hint="Indonesia"
        android:textColorHint="@color/black"
        android:textSize="18dp"
        android:layout_width="311dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/rectangle"/>

    <TextView
        style="@style/TextBody14Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="490dp"
        android:text="KTP/Paspor"
        android:textColor="@color/darkblue_05"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/etKtpPenumpang"
        android:layout_width="311dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/rectangle"/>

    <TextView
        style="@style/TextBody14Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="570dp"
        android:text="Negara Penerbit"
        android:textColor="@color/darkblue_05"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/etNegaraPenerbitPenumpang"
        android:layout_width="311dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/rectangle"/>




</RelativeLayout>